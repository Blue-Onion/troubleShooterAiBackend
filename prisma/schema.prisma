generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(uuid())
    name     String
    email    String @unique
    password String

    memberships    Membership[]
    reportedIssues Issue[]      @relation("ReportedBy")

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Organization {
    id          String  @id @default(uuid())
    name        String
    slug        String  @unique
    description String?
    address     String?

    memberships     Membership[]
    issues          Issue[]
    issueCategories IssueCategory[]
    jobCategories   JobCategory[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Membership {
    id String @id @default(uuid())

    userId         String
    organizationId String
    role           OrgRole
    status         MembershipStatus @default(PENDING)
    jobCategoryId  String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

    jobCategory JobCategory? @relation(fields: [jobCategoryId], references: [id], onDelete: SetNull)

    createdAt DateTime @default(now())

    @@unique([userId, organizationId])
}

model Issue {
    id String @id @default(uuid())

    organizationId String
    categoryId     String
    reportedById   String

    organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

    category IssueCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

    reportedBy User @relation("ReportedBy", fields: [reportedById], references: [id], onDelete: Cascade)

    title       String
    description String
    imageUrl    String?

    priority Priority
    status   IssueStatus @default(PENDING)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model IssueCategory {
  id             String @id @default(uuid())
  name           String
  organizationId String

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  issues Issue[]

  createdAt DateTime @default(now())

  @@unique([name, organizationId])
}

model JobCategory {
    id             String @id @default(uuid())
    name           String
    organizationId String

    organization Organization @relation(fields: [organizationId], references: [id])
    memberships  Membership[]

    createdAt DateTime @default(now())

    @@unique([name, organizationId])
}

enum OrgRole {
    ADMIN
    STAFF
    MEMBER
}

enum IssueStatus {
    PENDING
    IN_PROGRESS
    RESOLVED
}

enum Priority {
    LOW
    MEDIUM
    MEDIUM_HIGH
    HIGH
}

enum MembershipStatus {
    PENDING
    ACCEPTED
    REJECTED
    SUSPENDED
}
